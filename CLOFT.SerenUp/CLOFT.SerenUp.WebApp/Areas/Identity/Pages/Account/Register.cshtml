@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="h-100" style="position:relative; align-items: center; background: linear-gradient(90deg, rgba(255,255,255,1) 32%, rgba(68,180,125,1) 100%, rgba(255,189,140,1) 100%);">
    <div class="w-100 pt-5">
        <h2>@ViewData["Title"]</h2>
        <h4>Create a new account.</h4>
        <hr />
    </div>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="width:100%;">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="d-flex align-items-center pt-5">
            <div class="pe-5 pt-4" style="width: 24rem;">
                <div class="form-group mb-3">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" placeholder="For sign in" autocomplete="Username">
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" autocomplete="Name" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" autocomplete="LastName" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="Phone number" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.BirthDate"></label>
                    <input asp-for="Input.BirthDate" class="form-control" autocomplete="Birth Date" />
                    <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                </div>
            </div>

            <div class="pt-4" style="width: 24rem;">
                <div class="form-group mb-3">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.EmergencyEmail1"></label>
                    <input asp-for="Input.EmergencyEmail1" class="form-control" autocomplete="Emergency email" />
                    <span asp-validation-for="Input.EmergencyEmail1" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Bracelets</label>
                    <select asp-for="Input.BraceletId" class="custom-select" id="inputGroupSelect01">

                        @foreach (var item in @Model.bracelets)
                        {
                            if (@item.Username == null)
                            {
                                <option value="@item.SerialNumber">@item.Color - @item.SerialNumber.ToString().Substring(0, 4)</option>
                            }
                        }
                    </select>
                </div>

                @*<div class="form-group mb-3">
                <label asp-for="Input.EmergencyEmail2"></label>
                <input asp-for="Input.EmergencyEmail2" class="form-control" />
                <span asp-validation-for="Input.EmergencyEmail2" class="text-danger"></span>
                </div>*@
                <div class="form-group mb-3">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

            </div>

        </div>
        <button type="submit" class="btn btn-primary" style="background-color:#44b47d; border-color:#44b47d;">Register</button>
    </form>
    <div style="position:absolute; top:25%; left:60%; ">
        <img src="~/Resource/registration-flat-modern-design-illustration_566886-499-removebg-preview.png">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

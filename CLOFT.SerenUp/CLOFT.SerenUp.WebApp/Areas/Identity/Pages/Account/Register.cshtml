@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="d-flex row" style="align-items: center; height:100vh; background: linear-gradient(90deg, rgba(251,251,251,1) 35%, rgba(255,175,131,1) 68%, rgba(255,68,43,1) 85%, rgba(107,1,54,1) 100%);">
    <h2>@ViewData["Title"]</h2>
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" placeholder="For sign in" autocomplete="UserName">
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" autocomplete="Name" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" autocomplete="LastName" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="Phone number" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Input.BirthDate"></label>
                <input asp-for="Input.BirthDate" class="form-control" autocomplete="Birth Date" />
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Input.EmergencyEmail1"></label>
                <input asp-for="Input.EmergencyEmail1" class="form-control" autocomplete="Emergency email" />
                <span asp-validation-for="Input.EmergencyEmail1" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label>Bracelets</label>
                <select class="custom-select" id="inputGroupSelect01">
                    
                    @foreach (var item in @Model.bracelets)
                    {
                        if (@item.Username == null)
                        {
                            <option value="@item.SerialNumber">@item.Color - @item.SerialNumber.ToString().Substring(0, 4)</option>
                        }
                    }
                </select>
            </div>

            @*<div class="form-group mb-2">
                <label asp-for="Input.EmergencyEmail2"></label>
                <input asp-for="Input.EmergencyEmail2" class="form-control" />
                <span asp-validation-for="Input.EmergencyEmail2" class="text-danger"></span>
                </div>*@
            <div class="form-group mb-2">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="Password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-4">
        <div style="width: 100vh; text-align: end;">
            <img src="~/Resource/RegisterUser.png">
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
